    "@types/node": "~8.9.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "codeceptjs": "^1.3.1",
    "codelyzer": "~4.5.0",
    "cross-env": "^5.1.4",
    "eslint": "^5.6.0",
    "eslint-plugin-node": "^7.0.1",
    "govuk-elements-sass": "^3.1.2",
    "govuk_frontend_toolkit": "^7.1.0",
    "gulp": "^3.9.1",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^4.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
