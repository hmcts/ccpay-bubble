    style(type='text/css').
      header {
        max-width: 984px;
        margin-left: 106px;
        margin-right: 106px;
        padding: 0px 20px 0px 20px;
      }
      #global-header{
        width: auto;
      }
      @media (min-width: 641px){
        #global-header{
          margin:0 30px
        }
      }
      @media (min-width: 1020px){
        #global-header{
          margin:0 auto
        }
      }
      .content {
        min-height: 400px;
      }
      .bar-header a {
        color: #ffffff;
      }
      .bar-header .title {
        padding: 0;
        text-align: left;
      }
      .bar-header .title a.content {
        padding: 0;
      }
      .second-nav__menu::after {
        clear: both;
        content: '';
        display: table;
      }
      .advanced-search {
        display: -webkit-inline-box;
        display: -ms-inline-flexbox;
        display: inline-flex;
      }
      .advanced-search::after {
        clear: both;
        content: "";
        display: table;
      }
      .advanced-search input[type=search] {
        float: left;
        border: 3px solid black;
        border-right: 0;
        height: 30px;
        padding: 0 2px;
      }
      .magnifier {
        background: black;
        cursor: pointer;
        padding: 5px;
        width: 20px;
        height: 20px;
        float: left;
        border: 3px solid black;
      }
      .help-block {
        background-color: rgba(222, 224, 226, 1);
        height: 157px;
        font-size: 16px;
        padding: 10px 20px 10px 20px;
      }
      footer {
        display: none;
      }
      #footer .footer-meta .footer-meta-inner .open-government-licence .logo a {
        background: url(https://assets.publishing.service.gov.uk/static/images/open-government-licence-c1aedc8257961b938b4c7a21a2b0db3f2716dd9ef782cea73110dc69107c9042.png) 0 0 no-repeat;
